# Environment Variables for ProjectAura
# Copy this file to .env and fill in your actual values

# AWS Cognito Configuration
EXPO_PUBLIC_AWS_USER_POOL_ID=us-east-1_XXXXXXXXX
EXPO_PUBLIC_AWS_CLIENT_ID=XXXXXXXXXXXXXXXXXXXXXXXXXX
EXPO_PUBLIC_AWS_REGION=us-east-1

# Hardware API Configuration  
EXPO_PUBLIC_HARDWARE_API_URL=http://192.168.1.100:3000
EXPO_PUBLIC_USE_MOCK_HARDWARE=false

# Feature Flags
EXPO_PUBLIC_ENABLE_ANALYTICS=true
EXPO_PUBLIC_ENABLE_CRASH_REPORTING=true

# Sentry (Error Tracking) - Optional
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Firebase (Analytics & Crashlytics) - Optional  
# EXPO_PUBLIC_FIREBASE_API_KEY=your-api-key
# EXPO_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
